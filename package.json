{
  "name": "koa-hot-client",
  "version": "1.0.0",
  "description": "Hot Module Replacement",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently --kill-others \"npm run dev-client\" \"npm run build:dev-server\" \"npm run start:dev-server\" ",
    "dev-client": "webpack-dev-server --config config/webpack.client.dev.js",
    "build:dev-server": "rimraf ./dist/server/* && webpack --watch --config config/webpack.server.dev.js",
    "start:dev-server": "node node_modules/npm-delay/index.js 8000 && node ./dist/server",
    "build": "npm run build:prod-client && npm run build:prod-server",
    "build:prod-client": "webpack --config config/webpack.client.prod.js",
    "build:prod-server": "webpack --config config/webpack.server.prod.js",
    "server": "node ./dist/server/server.js"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "chalk": "^2.4.1",
    "koa": "^2.5.2",
    "koa-nunjucks-2": "^3.0.2",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "koa-views": "^6.1.4",
    "pug": "^2.0.3",
    "react": "^16.4.2",
    "react-dom": "^16.6.3",
    "react-loadable": "^5.5.0",
    "react-redux": "^7.0.2",
    "react-router-config": "^5.0.0",
    "react-router-dom": "^5.0.0",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "asset-require-hook": "^1.2.0",
    "assets-webpack-plugin": "^3.9.6",
    "autoprefixer": "^9.5.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^7.1.5",
    "babel-plugin-ignore-html-and-css-imports": "0.0.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "concurrently": "^4.0.1",
    "cross-env": "^5.2.0",
    "css-hot-loader": "^1.4.2",
    "css-loader": "^1.0.0",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^4.2.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-node": "^9.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-standard": "^4.0.0",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "html-withimg-loader": "^0.1.16",
    "husky": "^2.2.0",
    "ignore-loader": "^0.1.2",
    "image-webpack-loader": "^4.6.0",
    "isomorphic-style-loader": "^5.0.1",
    "mini-css-extract-plugin": "^0.4.2",
    "node-sass": "^4.12.0",
    "npm-delay": "^1.0.4",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.17.0",
    "react-hot-loader": "^4.3.11",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.22.1",
    "url-loader": "^1.1.1",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.8",
    "webpack-node-externals": "^1.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "/*.{js,scss}": [
        "./node_modules/.bin/prettier --write",
        "./node_modules/.bin/eslint --fix",
        "git add"
      ]
    },
    "ignore": [
      ".idea/**",
      "node_modules/**"
    ]
  },
  "author": "lance wu",
  "license": "ISC"
}
